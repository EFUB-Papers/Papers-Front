{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    //json파일을 ts모듈로 불러올 수 있음.
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    // 타입 정의를 찾을 경로 설정
    "outDir": "dist",
    "baseUrl": "./src",
    }
  },
  "include": [
    "src",
    "src/components",
    "src/custom.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
